<body class="shop">

<h1 class="play"><%= @items.all[@index].category.name.upcase %></h1>
 <div class="row">
    <div class="deckcontainer">
	    <div class="large-12 small-12 columns" id="itemdeck">
        <!-- <div class="product"> -->
	        <% url = @items.all[@index].click_url %>
          <% image = @items.all[@index].image_url %>
          <%= link_to image_tag(image, class: "shop-images") , url %>
          <br>
        <!-- </div> -->
	    </div>

      <div id="product-details">
        <%= @items.all[@index].name %>
        <br>
        $ <%= @items.all[@index].price %>
      </div>

	  </div>

 	 	<div class="large-12 small-12 columns" id="likebar">
 	 		<%= link_to "LOSE", dislike_path(cat: params[:cat], price: params[:price], index: (@index += 1)), class: "button lose" %>
 	 		<%= link_to "BUY NOW", url, class: "button buy" %>
 			<%= link_to "LUST", item_like_path(cat: params[:cat], price: params[:price], index: (@index += 1)), class: "button lust", method: 'update' %>
    </div>
  </div>




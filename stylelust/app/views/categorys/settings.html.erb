<script>
  $(document).ready(function(){

   
      $( "#slider" ).slider({
        value:100,
        min: 20,
        max: 500,
        step: 20,
        slide: function( event, ui ) {
          $( "#amount" ).val( "$" + ui.value );
          console.log(ui.value);
          buildUrl(ui.value);
        }
      });

      $( "#amount" ).val( "$" + $( "#slider" ).slider( "value" ) );

      function buildUrl(price){
        $('#save').on('click', function(e){
            var url = "http://0.0.0.0:3000/items/play?cat=" + $('#first_drop option:selected').text() + "&price=" + price;
            console.log(url);
      window.location.href = url;
        });
      };

// $('#second_drop option:selected').text()
    
  });



</script>
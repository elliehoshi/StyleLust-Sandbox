        animate: true,
        slide: function( event, ui ) {
          $( "#amount" ).val( "$" + ui.value );
          console.log(ui.value);
          buildUrl(ui.value);
        }
      });

      $( "#amount" ).val( "$" + $( "#slider" ).slider( "value" ) );

      function buildUrl(price){
        $('#save').on('click', function(e){
